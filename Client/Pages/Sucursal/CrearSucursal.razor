@page "/crear/sucursal"
@inject HttpClient Http
@inject NavigationManager UriHelper

<h3>Crear Sucursal</h3>

<FormularioSucursal TextoBoton="Crear Sucursal" OnValidSubmit="@CrearSucursalNueva" Sucursal="@sucursal" />

@code {

    Sucursal sucursal = new Sucursal();

    async Task CrearSucursalNueva()
    {
        await Http.PostAsJsonAsync("api/sucursal/create",sucursal);
        UriHelper.NavigateTo("sucursal/index");
    }

}