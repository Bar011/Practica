@page "/crear/ciudad"
@inject HttpClient Http
@inject NavigationManager UriHelper

<h3>Crear Ciudad</h3>

<FormularioCiudad TextoBoton="Crear Ciudad" OnValidSubmit="@CrearCiudadNueva" Ciudad="@ciudad" />

@code { Ciudad ciudad = new Ciudad();

    async Task CrearCiudadNueva()
    {
        await Http.PostAsJsonAsync("api/ciudad/create", ciudad);
        UriHelper.NavigateTo("ciudad/index");
    }

}