@page "/crear/comuna"
@inject HttpClient Http
@inject NavigationManager UriHelper

<h3>Crear Comuna</h3>

<FormularioComuna TextoBoton="Crear Comuna" OnValidSubmit="@CrearComunaNueva" Comuna="@comuna" />

@code { Comuna comuna = new Comuna();

    async Task CrearComunaNueva()
    {
        await Http.PostAsJsonAsync("api/comuna/create", comuna);
        UriHelper.NavigateTo("comuna/index");
    }

}